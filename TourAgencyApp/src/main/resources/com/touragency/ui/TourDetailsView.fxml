<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.TourDetailsController">

    <children>
        <GridPane hgap="10" layoutX="20.0" layoutY="20.0" vgap="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Лейбли для полів -->
            <Label text="ID туру:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="tourIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Назва туру:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="tourNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Опис:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="descriptionLabel" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Ціна:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Тривалість:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Label fx:id="durationLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Дата та час:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="dateTimeLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Тип:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Label fx:id="typeLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Мова:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <Label fx:id="languageLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label text="Максимальна кількість осіб:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <Label fx:id="maxGroupSizeLabel" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label text="Рівень складності:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <Label fx:id="difficultyLevelLabel" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <Label text="Детальний опис:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <Label fx:id="detailedDescriptionLabel" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="10" />

            <Label text="Тип туру:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <Label fx:id="tourTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="11" />

            <Label text="Оцінка:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
            <Label fx:id="ratingLabel" GridPane.columnIndex="1" GridPane.rowIndex="12" />

            <Label text="Категорія туру:" GridPane.columnIndex="0" GridPane.rowIndex="13" />
            <Label fx:id="tourCategoryLabel" GridPane.columnIndex="1" GridPane.rowIndex="13" />

            <Button onAction="#handleCloseTab" text="Закрити вкладку" GridPane.rowIndex="15" />

         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>

        </GridPane>
    </children>
</AnchorPane>
